<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip" >

    <ToggleButton
        android:id="@+id/nmea_shutter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textOn="Shutter Out"
    	android:textOff="Shutter Out" />
    
    <ToggleButton
        android:id="@+id/nmea_focus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textOn="Focus Out"
        android:textOff="Focus Out"
        />
    
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        >
        <TableRow>
            <TextView android:textSize="11pt" android:textStyle="bold" android:layout_marginRight="10dip" android:text="Latitude" />
    		<TextView android:textSize="11pt" android:id="@+id/nmea_latitude" />            
        </TableRow>
        <TableRow android:layout_marginRight="10dip">
            <TextView android:textSize="11pt" android:textStyle="bold" android:layout_marginRight="10dip" android:text="Longitude" />
    		<TextView android:textSize="11pt" android:id="@+id/nmea_longitude" />            
        </TableRow>
        <TableRow android:layout_marginRight="10dip">
            <TextView android:textSize="11pt" android:textStyle="bold" android:layout_marginRight="10dip" android:text="Altitude" />
    		<TextView android:textSize="11pt" android:id="@+id/nmea_altitude" />            
        </TableRow>
        <TableRow android:layout_marginRight="10dip">
            <TextView android:textSize="11pt" android:textStyle="bold" android:layout_marginRight="10dip" android:text="Heading" />
    		<TextView android:textSize="11pt" android:id="@+id/nmea_heading" />            
        </TableRow>
        <TableRow android:layout_marginRight="10dip">
            <TextView android:textSize="11pt" android:textStyle="bold" android:layout_marginRight="10dip" android:text="UTC" />
    		<TextView android:textSize="10pt" android:id="@+id/nmea_time" />            
        </TableRow>
    </TableLayout>
    
    <TextView
        android:id="@+id/nmea_serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
		android:fontFamily="monospace"
        />
    
</LinearLayout>
